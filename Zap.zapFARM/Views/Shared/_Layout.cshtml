    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <span style="color:#b90000">zap</span><span style="color:black">FARM</span>
                </a>
            </div>
            <ul class="nav navbar-nav navbar-top-links">
                <li class="active">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-cloud fa-fw"></i> Private Cloud</a>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-top-links adminmenu">
                <li class="">
                    <a asp-area="" asp-controller="Home" asp-action="Users"><i class="fa fa-user fa-fw"></i> Users</a>
                </li>
                <li class="">
                    <a asp-area="" asp-controller="Home" asp-action="Groups"><i class="fa fa-users fa-fw"></i> Groups</a>
                </li>
                <li class="">
                    <a asp-area="" asp-controller="Home" asp-action="Devices"><i class="fa fa-mobile fa-fw"></i> Devices</a>
                </li>
                <li class="">
                    <a asp-area="" asp-controller="Home" asp-action="Proxy"><i class="fa fa-sitemap fa-fw"></i> Gateways</a>
                </li>
                <li class="dropdown ">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-tasks fa-fw"></i> Server <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li class="">
                            <a asp-area="" asp-controller="Home" asp-action="Tools"><i class="fa fa-shopping-cart fa-fw"></i> Tools</a>
                        </li>
                        <li class="">
                            <a asp-area="" asp-controller="Home" asp-action="Certificates"><i class="fa fa-certificate fa-fw"></i> Certificates</a>
                        </li>
                        <li class="">
                            <a asp-area="" asp-controller="Home" asp-action="Licenses"><i class="fa fa-shopping-cart fa-fw"></i> Licenses</a>
                        </li>
                    </ul>
                </li>
            </ul>
            @await Html.PartialAsync("_LoginPartial")
